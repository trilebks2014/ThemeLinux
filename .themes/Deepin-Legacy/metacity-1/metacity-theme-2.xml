<?xml version="1.0"?>
<metacity_theme>
<info>
    <name>Deepin</name>
    <author>LinuxDeepin Team</author>
    <copyright>GPLv3</copyright>
    <date>2012-12</date>
    <description>Default theme for LinuxDeepin.</description>
</info>

<!--geometry -->
<frame_geometry name="normal" rounded_top_left="1" rounded_top_right="1" rounded_bottom_left="1" rounded_bottom_right="1">
	<distance name="left_width" value="5"/>
	<distance name="right_width" value="5"/>
	<distance name="bottom_height" value="5"/>
	<distance name="left_titlebar_edge" value="0"/>
	<distance name="right_titlebar_edge" value="0"/>
	<distance name="title_vertical_pad" value="13"/>
	<distance name="button_width" value="27"/>
	<distance name="button_height" value="26"/>
	<border name="title_border" left="0" right="0" top="0" bottom="0"/>
	<border name="button_border" left="0" right="0" top="0" bottom="0"/>
</frame_geometry>

<frame_geometry name="maximized" parent="normal" rounded_top_left="0" rounded_top_right="0" rounded_bottom_left="0" rounded_bottom_right="0">
	<distance name="left_width" value="0"/>
	<distance name="right_width" value="0"/>
	<distance name="bottom_height" value="0"/>
</frame_geometry>

<frame_geometry name="border" has_title="false">
	<distance name="left_width" value="0"/>
	<distance name="right_width" value="0"/>
	<distance name="bottom_height" value="0"/>
	<distance name="left_titlebar_edge" value="0"/>
	<distance name="right_titlebar_edge" value="0"/>
	<distance name="button_width" value="0"/>
	<distance name="button_height" value="0"/>
	<distance name="title_vertical_pad" value="0"/>
	<border name="title_border" left="0" right="0" top="0" bottom="0"/>
	<border name="button_border" left="0" right="0" top="0" bottom="0"/>
</frame_geometry>

<!--corner and ouline -->
<constant name="BlackColor" value="#888"/>
<constant name="WhiteColor" value="#ffffff"/>

<draw_ops name="corner_outline">
    <!--line y="0" -->
    <tint color="BlackColor" x="1" y="0" width="1" height="1" alpha="0.25"/>
    <tint color="BlackColor" x="2" y="0" width="1" height="1" alpha="0.5"/>
    <tint color="BlackColor" x="3" y="0" width="width-6" height="1" alpha="0.6"/>
    <tint color="BlackColor" x="width-3" y="0" width="1" height="1" alpha="0.5"/>
    <tint color="BlackColor" x="width-2" y="0" width="1" height="1" alpha="0.25"/>

    <!--line y="1" -->
    <tint color="BlackColor" x="0" y="1" width="1" height="1" alpha="0.25"/>
    <tint color="BlackColor" x="1" y="1" width="1" height="1" alpha="0.5"/>
    <tint color="#b3b3b3" x="2" y="1" width="1" height="1" alpha="0.25"/>
    <tint color="WhiteColor" x="3" y="1" width="1" height="1" alpha="0.5"/>
    <tint color="WhiteColor" x="4" y="1" width="width-8" height="1" alpha="0.6"/>
    <tint color="WhiteColor" x="width-4" y="1" width="1" height="1" alpha="0.5"/>
    <tint color="#b3b3b3" x="width-3" y="1" width="1" height="1" alpha="0.25"/>
    <tint color="BlackColor" x="width-2" y="1" width="1" height="1" alpha="0.5"/>
    <tint color="BlackColor" x="width-1" y="1" width="1" height="1" alpha="0.25"/>

    <!--line y="2" -->
    <tint color="BlackColor" x="0" y="2" width="1" height="1" alpha="0.5"/>
    <tint color="#b3b3b3" x="1" y="2" width="1" height="1" alpha="0.25"/>
    <tint color="WhiteColor" x="2" y="2" width="1" height="1" alpha="0.5"/>
    <tint color="WhiteColor" x="3" y="2" width="1" height="1" alpha="0.15"/>
    <tint color="WhiteColor" x="width-4" y="2" width="1" height="1" alpha="0.15"/>
    <tint color="WhiteColor" x="width-3" y="2" width="1" height="1" alpha="0.50"/>
    <tint color="#b3b3b3" x="width-2" y="2" width="1" height="1" alpha="0.25"/>
    <tint color="BlackColor" x="width-1" y="2" width="1" height="1" alpha="0.50"/>

    <!--line y="3" -->
    <tint color="BlackColor" x="0" y="3" width="1" height="1" alpha="0.6"/>
    <tint color="WhiteColor" x="1" y="3" width="1" height="1" alpha="0.5"/>
    <tint color="WhiteColor" x="2" y="3" width="1" height="1" alpha="0.15"/>
    <tint color="WhiteColor" x="width-3" y="3" width="1" height="1" alpha="0.15"/>
    <tint color="WhiteColor" x="width-2" y="3" width="1" height="1" alpha="0.5"/>
    <tint color="BlackColor" x="width-1" y="3" width="1" height="1" alpha="0.6"/>

    <!--line y="height-4" -->
    <tint color="BlackColor" x="0" y="height-4" width="1" height="1" alpha="0.6"/>
    <tint color="WhiteColor" x="1" y="height-4" width="1" height="1" alpha="0.5"/>
    <tint color="WhiteColor" x="2" y="height-4" width="1" height="1" alpha="0.15"/>
    <tint color="WhiteColor" x="width-3" y="height-4" width="1" height="1" alpha="0.15"/>
    <tint color="WhiteColor" x="width-2" y="height-4" width="1" height="1" alpha="0.5"/>
    <tint color="BlackColor" x="width-1" y="height-4" width="1" height="1" alpha="0.6"/>

    <!--line y="height-3" -->
    <tint color="BlackColor" x="0" y="height-3" width="1" height="1" alpha="0.5"/>
    <tint color="#b3b3b3" x="1" y="height-3" width="1" height="1" alpha="0.25"/>
    <tint color="WhiteColor" x="2" y="height-3" width="1" height="1" alpha="0.5"/>
    <tint color="WhiteColor" x="3" y="height-3" width="1" height="1" alpha="0.15"/>
    <tint color="WhiteColor" x="width-4" y="height-3" width="1" height="1" alpha="0.15"/>
    <tint color="WhiteColor" x="width-3" y="height-3" width="1" height="1" alpha="0.50"/>
    <tint color="#b3b3b3" x="width-2" y="height-3" width="1" height="1" alpha="0.25"/>
    <tint color="BlackColor" x="width-1" y="height-3" width="1" height="1" alpha="0.50"/>

    <!--line y="height-2" -->
    <tint color="BlackColor" x="0" y="height-2" width="1" height="1" alpha="0.25"/>
    <tint color="BlackColor" x="1" y="height-2" width="1" height="1" alpha="0.5"/>
    <tint color="#b3b3b3" x="2" y="height-2" width="1" height="1" alpha="0.25"/>
    <tint color="WhiteColor" x="3" y="height-2" width="1" height="1" alpha="0.5"/>
    <tint color="WhiteColor" x="4" y="height-2" width="width-8" height="1" alpha="0.6"/>
    <tint color="WhiteColor" x="width-4" y="height-2" width="1" height="1" alpha="0.5"/>
    <tint color="#b3b3b3" x="width-3" y="height-2" width="1" height="1" alpha="0.25"/>
    <tint color="BlackColor" x="width-2" y="height-2" width="1" height="1" alpha="0.5"/>
    <tint color="BlackColor" x="width-1" y="height-2" width="1" height="1" alpha="0.25"/>

    <!--line y="height-1" -->
    <tint color="BlackColor" x="1" y="height-1" width="1" height="1" alpha="0.25"/>
    <tint color="BlackColor" x="2" y="height-1" width="1" height="1" alpha="0.5"/>
    <tint color="BlackColor" x="3" y="height-1" width="width-6" height="1" alpha="0.6"/>
    <tint color="BlackColor" x="width-3" y="height-1" width="1" height="1" alpha="0.5"/>
    <tint color="BlackColor" x="width-2" y="height-1" width="1" height="1" alpha="0.25"/>

    <!--vertical line -->
    <tint color="BlackColor" x="0" y="4" width="1" height="height-8" alpha="0.6"/>
    <tint color="WhiteColor" x="1" y="4" width="1" height="height-8" alpha="0.6"/>

    <tint color="WhiteColor" x="width-2" y="4" width="1" height="height-8" alpha="0.6"/>
    <tint color="BlackColor" x="width-1" y="4" width="1" height="height-8" alpha="0.6"/>
</draw_ops>

<!-- focused background -->
<constant name="FocusedBgColor" value="#ccefff"/>

<draw_ops name="focused_color_background">
    <!--top line -->
    <tint color="FocusedBgColor" x="0" y="0" width="1" height="1" alpha="1.0"/>
    <tint color="FocusedBgColor" x="1" y="0" width="1" height="1" alpha="0.5"/>
    <tint color="FocusedBgColor" x="2" y="0" width="width-4" height="1" alpha="1.0"/>
    <tint color="FocusedBgColor" x="width-2" y="0" width="1" height="1" alpha="0.5"/>

    <!--bottom line -->
    <tint color="FocusedBgColor" x="1" y="height-1" width="1" height="1" alpha="0.5"/>
    <tint color="FocusedBgColor" x="2" y="height-1" width="width-4" height="1" alpha="1.0"/>
    <tint color="FocusedBgColor" x="width-2" y="height-1" width="1" height="1" alpha="0.5"/>

    <!--left line -->
    <tint color="FocusedBgColor" x="0" y="1" width="1" height="1" alpha="0.5"/>
    <tint color="FocusedBgColor" x="0" y="2" width="1" height="height-4" alpha="1.0"/>
    <tint color="FocusedBgColor" x="0" y="height-2" width="1" height="1" alpha="0.5"/>

    <!--right line -->
    <tint color="FocusedBgColor" x="width-1" y="1" width="1" height="1" alpha="0.5"/>
    <tint color="FocusedBgColor" x="width-1" y="2" width="1" height="height-4" alpha="1.0"/>
    <tint color="FocusedBgColor" x="width-1" y="height-2" width="1" height="1" alpha="0.5"/>

    <!--center block -->
    <!--<tint color="FocusedBgColor" x="1" y="1" width="width-2" height="height-2" alpha="1.0"/>-->
    <gradient type="vertical" x="1" y="1" width="width-2" height="height-2">
        <color value="FocusedBgColor" />
        <color value="#ffffff" />
    </gradient>
</draw_ops>

<constant name="InnerOutLine" value="#aeaeae"/>
<draw_ops name="inner_outline">


</draw_ops>

<draw_ops name="focused_normal_entire_background">
    <include name="focused_color_background"/>
    <include name="corner_outline"/>
    <include name="inner_outline"/>
</draw_ops>

<draw_ops name="focused_maxed_entire_background">
    <tint color="FocusedBgColor" x="0" y="0" width="width" height="height" alpha="1.0"/>
    <tint color="InnerOutLine" x="0" y="title_height+12" width="width" height="1" alpha="1.0"/>
</draw_ops>

<!-- unfocused background -->
<constant name="UnFocusedBgColor" value="#ccefff"/>

<draw_ops name="unfocused_color_background">
    <!--top line -->
    <tint color="UnFocusedBgColor" x="0" y="0" width="1" height="1" alpha="1.0"/>
    <tint color="UnFocusedBgColor" x="1" y="0" width="1" height="1" alpha="0.5"/>
    <tint color="UnFocusedBgColor" x="2" y="0" width="width-4" height="1" alpha="1.0"/>
    <tint color="UnFocusedBgColor" x="width-2" y="0" width="1" height="1" alpha="0.5"/>

    <!--bottom line -->
    <tint color="UnFocusedBgColor" x="1" y="height-1" width="1" height="1" alpha="0.5"/>
    <tint color="UnFocusedBgColor" x="2" y="height-1" width="width-4" height="1" alpha="1.0"/>
    <tint color="UnFocusedBgColor" x="width-2" y="height-1" width="1" height="1" alpha="0.5"/>

    <!--left line -->
    <tint color="UnFocusedBgColor" x="0" y="1" width="1" height="1" alpha="0.5"/>
    <tint color="UnFocusedBgColor" x="0" y="2" width="1" height="height-4" alpha="1.0"/>
    <tint color="UnFocusedBgColor" x="0" y="height-2" width="1" height="1" alpha="0.5"/>

    <!--right line -->
    <tint color="UnFocusedBgColor" x="width-1" y="1" width="1" height="1" alpha="0.5"/>
    <tint color="UnFocusedBgColor" x="width-1" y="2" width="1" height="height-4" alpha="1.0"/>
    <tint color="UnFocusedBgColor" x="width-1" y="height-2" width="1" height="1" alpha="0.5"/>

    <!--center block -->
    <!--<tint color="UnFocusedBgColor" x="1" y="1" width="width-2" height="height-2" alpha="1.0"/>-->
    <gradient type="vertical" x="1" y="1" width="width-2" height="height-2">
        <color value="UnFocusedBgColor" />
        <color value="#ffffff" />
    </gradient>
</draw_ops>

<draw_ops name="unfocused_normal_entire_background">
    <include name="unfocused_color_background"/>
    <include name="corner_outline"/>
    <include name="inner_outline"/>
</draw_ops>

<draw_ops name="unfocused_maxed_entire_background">
    <tint color="UnFocusedBgColor" x="0" y="0" width="width" height="height" alpha="1.0"/>
    <tint color="InnerOutLine" x="0" y="title_height+12" width="width" height="1" alpha="1.0"/>
</draw_ops>

